<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorprimary</item>
        <item name="colorPrimaryDark">@color/button</item>
        <item name="colorAccent">@color/button</item>
        <item name="android:subtitleTextAppearance">@style/MyTheme.ActionBar.SubTitleTextStyle</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorprimary</item>
        <item name="colorPrimaryDark">@color/button</item>
        <item name="colorAccent">@color/button</item>

    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="collapsed_appearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>
    <style name="expanded_appearance" parent="TextAppearance.AppCompat.Display2">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>




    <style name="MyTheme.ActionBar.SubTitleTextStyle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
